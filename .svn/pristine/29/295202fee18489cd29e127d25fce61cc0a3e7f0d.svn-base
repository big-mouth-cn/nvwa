<?xml version="1.0" encoding="UTF-8" ?>    
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.bigmouth.nvwa.authority.dao.UserDao">
	<resultMap type="org.bigmouth.nvwa.authority.entity.User" id="User">
		<id column="id" property="id"/>
		<result column="login_name" property="loginName"/>
		<result column="username" property="username"/>
		<result column="password" property="password"/>
		<result column="useable" property="useable"/>
		<result column="email" property="email"/>
		<result column="telephone" property="telephone"/>
		<result column="create_time" property="createTime"/>
		<result column="modify_time" property="modifyTime"/>
		
		<collection property="roles" column="id"
				select="org.bigmouth.nvwa.authority.dao.RoleDao.selectForUser"
				ofType="org.bigmouth.nvwa.authority.entity.Role"></collection>
	</resultMap>
	
	<sql id="whereBySelective">
		<where>
			<if test="id != null">AND id = #{id}</if>
			<if test="loginName != null">AND login_name = #{loginName}</if>
			<if test="password != null">AND password = #{password}</if>
			<if test="useable != null">AND useable = #{useable}</if>
			<if test="email != null">AND email = #{email}</if>
			<if test="telephone != null">AND telephone = #{telephone}</if>
		</where>
	</sql>
	
	<select id="select" resultMap="User" parameterType="org.bigmouth.nvwa.authority.entity.UserSeletive">
		SELECT id, login_name, username, password, useable, email, telephone, 
		       create_time, modify_time
		  FROM tbl_common_user
		  	<include refid="whereBySelective" />
	</select>
</mapper>